@model HovedOppgave.Models.CalibrationViews

@{
    ViewBag.Title = "Kalibrering logg detaljer";
}

<h2>Kalibrering logg detaljer</h2>

<br />
<div class="col-lg-offset-2">
    <div class="btn-group" role="group">
        <button type="button" class="btn btn-default" onclick="Overview()">Oversikt</button>
        <button type="button" class="btn btn-default" onclick="Create()">Registrer ny enhet</button>
        <button type="button" class="btn btn-default" onclick="History()">Logg</button>
        <button type="button" class="btn btn-default" onclick="License()">Sertifikat</button>
        <button type="button" class="btn btn-default" onclick="Import()">Importering</button>
    </div>
</div>
<br />

<div class="col-lg-12">
    <h4>Kalibrering</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Registrert dato")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.LogEvent.RegisteredDate.Date)
        </dd>
        <dt>
            @Html.DisplayName("Planlagt dato")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.LogEvent.StartDate.Date)
        </dd>
        <dt id="endDate"></dt>
        <dd>
            @Html.DisplayFor(model => model.LogEvent.EndDate.Date)
        </dd>
        <dt>
            @Html.DisplayName("Data 1")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.LogEvent.Data1)
        </dd>
        <dt>
            @Html.DisplayName("Data 2")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.LogEvent.Data2)
        </dd>
    </dl>
</div>

<div class="col-lg-12">
    <h4>Event type</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Event type")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.EventType.Name)
        </dd>
    </dl>
</div>

<div class="col-lg-12">
    <h4>Utstyrsenhet</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Enhet")
        </dt>
        <dd id="device"></dd>
    </dl>
</div>

<div class="col-lg-12">
    <h4>Organisasjon</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Kalibreres av")
        </dt>
        <dd id="company"></dd>
    </dl>
</div>

<div class="col-lg-12">
    <h4>Rom</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Navn")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Room.Name)
        </dd>
    </dl>
</div>

<div class="col-lg-12">
    <h4>Sertifikat</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Fil navn")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.File.FileName)
        </dd>
    </dl>
</div>

<button class="btn btn-default" type="button" id="button">Rediger kalibrering</button>

<script type="text/javascript">
    $(document).ready(function () {
        var device = @Html.Raw(Json.Encode(Model.Device));
        var company = @Html.Raw(Json.Encode(Model.Company));
        
        CalibrationViewsDetails(device, company);

        $("#button").click(function() {
            window.location.replace("/Kalibrering/EditCalibration/" + @Model.LogEvent.LogEventID)
        });
    });

    function Overview() {
        window.location.replace("/Kalibrering/Overview");
    };

    function Create() {
        window.location.replace("/Kalibrering/Create/" + 0);
    };

    function Import() {
        window.location.replace("/Kalibrering/Import/" + 0);
    };

    function History() {
        window.location.replace("/Kalibrering/History");
    };

    function License() {
        window.location.replace("/Kalibrering/License");
    };
</script>
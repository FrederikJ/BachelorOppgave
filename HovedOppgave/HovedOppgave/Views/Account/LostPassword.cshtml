@model HovedOppgave.Models.LostPasswordViewModel

<h2>Mistet Passord</h2>
<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            @using (Html.BeginForm("LostPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4>Vennligst skriv inn eposten din og få tilsendt nytt passord</h4>
                <hr />
                @Html.ValidationSummary(true)
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", required = true })
                        @Html.ValidationMessageFor(m => m.Email, "Vennligst bruk riktig format: noe@noe.domene uten ulovlige tegn", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Send nytt passord" class="btn btn-default" />
                    </div>
                </div>
                <p>
                    <button type="button" class="btn btn-default" id="back"><span class="glyphicon glyphicon-arrow-left"></span></button>
                </p>
            }
        </section>
    </div>
</div>

<script type="text/javascript">
    $("#back").click(function () {
        window.location.replace("/Account/Login");
    });
</script>
@model HovedOppgave.Models.LostPasswordViewModel

@{
    ViewBag.Title = "Mistet Passord";
}

<h2>@ViewBag.Title.</h2>
<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            @using (Html.BeginForm("LostPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4>Vennligst skriv inn eposten din og få tilsendt nytt passord</h4>
                <hr />
                @Html.ValidationSummary(true)
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Email)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="ResendPassword" class="btn btn-default" />
                    </div>
                </div>
                <p>
                    @Html.ActionLink("Login", "Login") Return to login.
                </p>
            }
        </section>
    </div>
</div>